<Window x:Class="test_dem.AuthWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:test_dem"
        mc:Ignorable="d"
        Title="Окно авторизации" Height="350" Width="700" WindowStartupLocation="CenterScreen">
    <Grid>
        <TextBox x:Name="Login" Height="28" Margin="120,82,132,0" TextWrapping="Wrap" VerticalAlignment="Top" d:LayoutOverrides="VerticalAlignment"/>
        <Image Source="logo.png" Stretch="Fill" Height="80" VerticalAlignment="Top" HorizontalAlignment="Left" Width="95"/>
        <PasswordBox x:Name="Password" Margin="120,135,132,144" PasswordChar="*"/>
        <Button x:Name="Authorize" Content="Авторизоваться" Margin="120,0,132,49" VerticalAlignment="Bottom" Height="50" Click="Authorize_Click"/>
    </Grid>
</Window>
